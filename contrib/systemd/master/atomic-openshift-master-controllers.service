[Unit]
Description=Atomic OpenShift Master Controllers
Requires=docker.service
After=docker.service

[Service]
Type=simple
TimeoutStartSec=10m
ExecStart=/usr/local/bin/atomic-openshift-master-controllers start
ExecStop=-/usr/local/bin/atomic-openshift-master-controllers stop
Restart=always
RestartSec=30

[Install]
WantedBy=default.target

